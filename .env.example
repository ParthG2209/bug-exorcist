# Bug Exorcist Environment Configuration

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Google Gemini API Configuration (Fallback AI)
GEMINI_API_KEY=your-gemini-api-key-here

# Database Configuration
DATABASE_URL=sqlite:///./bug_exorcist.db

# Application Settings
DEBUG=True
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Optional: GitHub Configuration for Git Operations
GITHUB_TOKEN=your-github-token-here
GITHUB_REPO_URL=https://github.com/user/repo

# Fallback Feature Configuration
# Enable graceful fallback when AI analysis fails after all retry attempts
# When enabled, provides structured manual debugging guidance instead of generic errors
ENABLE_FALLBACK=true

# AI Agent Configuration
# Primary AI: gpt-4o (default)
# Fallback AI: gemini-1.5-pro (activates if GPT-4o fails)
ENABLE_GEMINI_FALLBACK=true